<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.NewApp.SettingActivity">
    <RelativeLayout
        android:id="@+id/rlHeaderSA"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">

        <ImageView
            android:id="@+id/imgVwBackSA"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@drawable/ic_back_black" />

        <TextView
            android:fontFamily="@font/gotham_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Setting"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_bg"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlHeaderSA">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter server pointing URL"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/gotham_book_regular"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/black"
                />

            <Spinner
                android:id="@+id/spServerUrlSA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:visibility="gone"
                />

            <EditText
                android:id="@+id/etServerUrlSA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="write at here..."
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/gotham_book_regular"
                android:layout_marginTop="@dimen/_8sdp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_bg"
                android:layout_marginTop="@dimen/_5sdp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select default launching screen"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/gotham_book_regular"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/black"
                />

            <Spinner
                android:id="@+id/spScreensSA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_bg"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select default camera facing"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/gotham_book_regular"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/black"
                />

            <Spinner
                android:id="@+id/spCameraFacingSA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_bg"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Do you want GPS location tracking?"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/gotham_book_regular"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/black"
                />

            <RadioGroup
                android:id="@+id/rgGPSTrackSA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkedButton="@id/rbYesTrackSA"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rbYesTrackSA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:fontFamily="@font/gotham_book_regular"
                    android:textSize="@dimen/_12ssp"
                    />
                <RadioButton
                    android:id="@+id/rbNoTrackSA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:fontFamily="@font/gotham_book_regular"
                    android:textSize="@dimen/_12ssp"
                    />
            </RadioGroup>

            <TextView
                android:id="@+id/tvSaveSA"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/btn_bg"
                android:text="Save"
                android:gravity="center"
                android:fontFamily="@font/gotham_medium"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                android:textAllCaps="true"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>