<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.NewApp.AddWfHRequestActivity">

    <RelativeLayout
        android:id="@+id/rlHeaderAWRA"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">

        <ImageView
            android:id="@+id/imgVwBackAWRA"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_back_black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imgVwBackAWRA"
            android:fontFamily="@font/avenir_next_bold"
            android:text="Add Work from Home Request"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/view_bg" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlHeaderAWRA">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp">

            <RelativeLayout
                android:id="@+id/rlEmpListAWRA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <Spinner
                    android:id="@+id/spEmpNameAWRA"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/edit_left_border_bg"
                    android:paddingEnd="@dimen/_30sdp" />

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/ic_down_arrow"

                    />
            </RelativeLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tILEmpIdAWRA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlEmpListAWRA"
                android:layout_marginTop="@dimen/_8sdp">

                <EditText
                    android:id="@+id/etEmpIdAWRA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:fontFamily="@font/avenir_next_regular"
                    android:hint="Employee Id"
                    android:singleLine="true"
                    android:textSize="@dimen/_12ssp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvStartDateTitleAWRA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tILEmpIdAWRA"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/avenir_next_regular"
                android:text="Start Date"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />

            <RelativeLayout
                android:id="@+id/rlStartDateAWRA"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/tvStartDateTitleAWRA"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/edit_left_border_bg">

                <TextView
                    android:id="@+id/tvStartDateAWRA"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/avenir_next_regular"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/_10sdp"
                    android:hint="DD/MM/YYYY"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/ic_calendar_leave" />
            </RelativeLayout>
            <TextView
                android:id="@+id/tvEndDateTitleAWRA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlStartDateAWRA"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/avenir_next_regular"
                android:text="End Date"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />

            <RelativeLayout
                android:id="@+id/rlEndDateAWRA"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/tvEndDateTitleAWRA"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/edit_left_border_bg">

                <TextView
                    android:id="@+id/tvEndDateAWRA"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/avenir_next_regular"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/_10sdp"
                    android:hint="DD/MM/YYYY"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/ic_calendar_leave" />
            </RelativeLayout>



            <TextView
                android:id="@+id/tvAddRequestAWRA"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/rlEndDateAWRA"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/btn_bg"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                android:textAllCaps="true"
                android:fontFamily="@font/avenir_next_bold"
                android:gravity="center"
                android:text="Add Request" />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>