<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/_10sdp"
    android:background="@color/white"
    android:padding="@dimen/_10sdp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Custom Date"
        android:textColor="@color/app_bg"
        android:gravity="center"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="@font/gotham_medium"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp">

        <EditText
            android:id="@+id/etStartDateDSCD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/gotham_book_regular"
            android:hint="Select Start Date"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp">

        <EditText
            android:id="@+id/etEndDateDSCD"
            android:editable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/gotham_book_regular"
            android:hint="Select End Date"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvOkDSCD"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/gotham_medium"
            android:gravity="center"
            android:text="Ok"
            android:textSize="@dimen/_12ssp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:textAllCaps="true"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvCancelDSCD"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@drawable/edit_left_border_bg"
            android:fontFamily="@font/gotham_medium"
            android:gravity="center"
            android:textSize="@dimen/_12ssp"
            android:text="Cancel"
            android:textAllCaps="true"
            android:textColor="@color/app_bg" />
    </LinearLayout>

</LinearLayout>