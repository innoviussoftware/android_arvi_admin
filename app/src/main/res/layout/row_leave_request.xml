<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/white_round_corner_bg"
    android:elevation="@dimen/_1sdp"
    android:layout_marginTop="@dimen/_8sdp"
    android:id="@+id/rlLeaveRLR"
    android:layout_marginStart="@dimen/_15sdp"
    android:layout_marginEnd="@dimen/_15sdp"
    android:padding="@dimen/_10sdp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">
            <TextView
                android:id="@+id/tvNameRLR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sushant"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/avenir_next_regular"
                />
            <TextView
                android:id="@+id/tvDateRLR"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dec 9 - Dec 11"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/avenir_next_regular"
                />
        </LinearLayout>

            <TextView
                android:id="@+id/tvLeaveTypeRLR"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_gravity="center_vertical"
                android:text="Full Day"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/avenir_next_bold"
                />

    </LinearLayout>
</RelativeLayout>