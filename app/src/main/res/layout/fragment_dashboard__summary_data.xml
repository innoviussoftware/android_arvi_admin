<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragment.Dashboard_SummaryDataFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/tvDayDSDF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_next_regular"
                android:gravity="center"
                android:text="Today"
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp" />

            <TextView
                android:id="@+id/tvEmpCountDSDF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDayDSDF"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/avenir_next_regular"
                android:gravity="center"
                android:text="Employee Count - 100"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />

            <LinearLayout
                android:id="@+id/llAttendanceTotalDSDF"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_below="@+id/tvEmpCountDSDF"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:background="@drawable/blue_border_round"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvPresentTitleDSDF"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:fontFamily="@font/avenir_next_regular"
                            android:gravity="center"
                            android:text="Present"
                            android:textColor="@color/app_bg"
                            android:textSize="@dimen/_14ssp"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvPresentTitleDSDF"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:fontFamily="@font/avenir_next_bold"
                            android:gravity="center"
                            android:text="80"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/app_bg"
                            android:textSize="@dimen/_18ssp"

                            />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:background="@drawable/red_border_round"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvAbsentTitleDSDF"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:fontFamily="@font/avenir_next_regular"
                            android:gravity="center"
                            android:text="Absent"
                            android:textColor="@color/red"
                            android:textSize="@dimen/_14ssp"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvAbsentTitleDSDF"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:fontFamily="@font/avenir_next_bold"
                            android:gravity="center"
                            android:text="20"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/red"
                            android:textSize="@dimen/_18ssp"

                            />

                    </RelativeLayout>

                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/viewDSDF"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="2dp"
                android:background="@color/view_bg"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/llAttendanceTotalDSDF"
                android:layout_marginTop="@dimen/_20sdp"
                />
            <TextView
                android:id="@+id/tvMonthTitleDSDF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_next_regular"
                android:gravity="center"
                android:text="This Month"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_below="@+id/viewDSDF"
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/tvMonthTitleDSDF"
                android:layout_marginTop="@dimen/_10sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/ic_clock_black"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="42.5 Hrs"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/avenir_next_bold"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total work hrs"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/avenir_next_regular"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/black"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/ic_overtime_black"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="8 Hrs"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/avenir_next_bold"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total overtime"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/avenir_next_regular"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/black"
                            />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/ic_calendar_leave"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="15 Days"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/avenir_next_bold"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Leaves"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/avenir_next_regular"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/black"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/ic_timer_late"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="15 Instances"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/avenir_next_bold"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Late"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/avenir_next_regular"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/black"
                            />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/ic_work_from_home"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="22 Days"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/avenir_next_bold"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Work from Home"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/avenir_next_regular"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/black"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/ic_pending_regularization"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="30 instances"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/avenir_next_bold"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pending\nRegularization"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/avenir_next_regular"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/black"
                            />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>