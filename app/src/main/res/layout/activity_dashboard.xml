<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.NewApp.DashboardActivity">
    <FrameLayout
        android:id="@+id/containerBody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rlBottombarDA"
        android:orientation="horizontal"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/rlBottombarDA"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/_60sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_60sdp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bottom_bar_bg">
            <RelativeLayout
                android:id="@+id/rlDashboardDA"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/imgVwDashboardDA"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:src="@drawable/ic_dashboard_selected"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:id="@+id/tvDashboardTitleDA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="Dashboard"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/app_bg"
                    android:fontFamily="@font/gotham_book_regular"
                    android:layout_below="@+id/imgVwDashboardDA"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlSelfiCheckInDA"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/imgVwSelfiCheckInDA"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/ic_selfi_unselected"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:id="@+id/tvSelfiCheckInDA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="Selfie Check-In"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/gotham_book_regular"
                    android:layout_below="@+id/imgVwSelfiCheckInDA"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlVisitorDA"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/imgVwVisitorDA"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/ic_visitor_unselected"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:id="@+id/tvVisitorTitleDA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="Visitor"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/gotham_book_regular"
                    android:layout_below="@+id/imgVwVisitorDA"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlRequestDA"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/imgVwRequestDA"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/ic_request_unselected"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:id="@+id/tvRequestTitleDA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="Request"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/gotham_book_regular"
                    android:layout_below="@+id/imgVwRequestDA"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlProfileDA"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/imgVwProfileDA"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/ic_profile_unselected"
                    android:scaleType="fitXY"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:id="@+id/tvProfileDA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="Profile"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/gotham_book_regular"
                    android:layout_below="@+id/imgVwProfileDA"
                    />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>